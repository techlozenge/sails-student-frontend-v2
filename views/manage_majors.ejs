<h2>Manage Majors</h2>
<button class="btn btn-success" id="addMajorButton">Add Major</button>
<table class="table table-striped table-bordered" id="majorTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major</th>
      <th>SAT Score</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof majors != "undefined" && majors.length > 0){ %>
    <% majors.forEach(function(major){ %>
      <tr>
        <td><%= major.major_id %></td>
        <td><%= major.major %></td>
        <td><%= major.sat %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-majorid="<%= major.major_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-majorid="<%= major.major_id %>"> delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major" method="POST" style="display: none;" id="deleteform">
