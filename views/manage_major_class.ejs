<h2>Manage Major_Classes</h2>
<button class="btn btn-success" id="addMajor_ClassButton">Add Major_Class</button>
<table class="table table-striped table-bordered" id="major_ClassTable" style="width:100%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Major ID</th>
      <th>Class ID</th>
      <th>Admin</th>
    </tr>
  </thead>
  <tbody>
  <% if(typeof major_classes != "undefined" && major_classes.length > 0){ %>
    <% major_classes.forEach(function(major_class){ %>
      <tr>
        <td><%= major_class.major_class_id %></td>
        <td><%= major_class.major_id %></td>
        <td><%= major_class.class_id %></td>
        <td class="text-center">
          <button class="btn btn-primary" id="editButton" data-majorclassid="<%= major_class.major_class_id %>">edit</button>
          <button class="btn btn-danger" id="deleteButton" data-majorclassid="<%= major_class.major_class_id %>"> delete</button>
        </td>
      </tr>
    <% }) %>
  <% } %>
  </tbody>
</table>

<div style="display: none;" id="deleteConfirm">Are you sure you want to delete this record?</div>

<form action="/delete_major_class" method="POST" style="display: none;" id="deleteform">
